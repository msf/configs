[alias]
ci = commit
co = checkout
st = status
di = diff
br = branch
lg = log --graph --pretty=format:\"%Cred%h%Creset â€” %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative
dt = diff-tree -p --color

[branch]
    autosetuprebase = always

[merge]
