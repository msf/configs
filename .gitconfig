[user]
	name = Miguel Filipe
	email = miguel.filipe@gmail.com

[alias]
ci = commit
co = checkout
st = status --short --branch
di = diff
br = branch
lg = log --graph --pretty=format:\"%Cred%h%Creset â€” %s %Cgreen(%cr)%Creset\" --decorate --oneline --date=relative
dt = diff-tree -p --color
dc = diff --cached
rim = rebase -i master
poh = push origin HEAD

[branch]
    autosetuprebase = always

[merge]
    ff = no
    tool = kdiff3

[pull]
    rebase = true

[core]
    pager = less -R
    excludesfile = /Users/miguel/.gitignore

[color]
    diff = auto
    status = true
    diff-tree = true
    branch = auto

[diff]
    tool = meld

[difftool "vimdirdiff"]
    cmd = vim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE '+syntax off'

[gui]
	fontui = -family \"Liberation Sans\" -size 12 -weight bold -slant roman -underline 0 -overstrike 0

[push]
    default = tracking

[branch]
    autosetuprebase = always

[pull]
	rebase = true
[credential]
	helper = cache
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
