		, Run CoreTemp ["-t","Temp:<core0>|<core1>C","-L","40","-H","60","-l","lightblue","-n","gray90","-h","red"] 50
		, Run Date "%r" "date" 10
		, Run Battery [] 10
		, Run Weather "LPPT" ["-t","<station>: <tempC>C, rh <rh>% (<hour>)"] 10
		, Run StdinReader
		]
	, sepChar = "%"
	, alignSep = "}{"
