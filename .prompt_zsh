#!/bin/zsh

# get the name of the branch we are on
my_vcs_info() {
    vcs_info
    echo "$vcs_info_msg_0_"
}

setprompt_simple() {
    autoload -U colors
    colors
    autoload -Uz vcs_info
    vcs_info
    zstyle ':vcs_info:*' formats "(%s)[%b] "
    zstyle ':vcs_info:*' actionformats "(%s)[%b|%a] "
    setopt prompt_subst

    for COLOR in BLUE RED GREEN YELLOW WHITE GREY BLACK; do
        eval PR_$COLOR='%{$fg[${(L)COLOR}]%}'
        eval PR_BOLD_$COLOR='%{$fg_bold[${(L)COLOR}]%}'
    done

    PR_RESET="%{$reset_color%}"


    PROMPT='$PR_BLUE%n$PR_WHITE@$PR_BOLD_YELLOW%m $PR_BLUE%c $PR_GREY$(my_vcs_info)$PR_BLUE%% $PR_RESET'
}


setprompt_simple
